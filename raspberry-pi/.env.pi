# 라즈베리 파이용 환경변수 설정

# 기본 설정
NODE_ENV=production
PORT=3000

# 데이터베이스 설정 (SQLite 사용)
DATABASE_URL=file:./data/eden-hangwa.db
DATA_DIR=./data

# 세션 보안 설정 (실제 배포시 변경 필요)
SESSION_SECRET=change-this-to-a-secure-random-string-for-production

# 라즈베리 파이 성능 최적화
NODE_OPTIONS=--max-old-space-size=512

# 로그 설정
LOG_LEVEL=info

# 파일 업로드 디렉토리
UPLOAD_DIR=./uploads

# 백업 디렉토리
BACKUP_DIR=./backup

# SSL 설정 (선택사항)
# HTTPS_ENABLED=false
# SSL_CERT_PATH=/path/to/cert.pem
# SSL_KEY_PATH=/path/to/key.pem